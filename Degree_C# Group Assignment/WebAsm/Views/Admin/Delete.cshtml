@model User

@{
	ViewData["Title"] = "Delete User";
}

@{
	ViewBag.links = "User";
}


<div class="admin-content">
	<h1>Delete User</h1>

	<p>Are you sure you want to delete the user below?</p>

	<div class="alert alert-warning">
		<strong>Email:</strong> @Model.Email <br />
		<strong>Residence Plate Number:</strong> @Model.ResidencePlateNumber <br />
		<strong>Discriminator:</strong> @Model.Discriminator
	</div>

	<form method="post">
		<input type="hidden" name="id" value="@Model.Id" />
		<div class="form-group">
			<button type="submit" class="btn btn-danger">Yes, Delete</button>
			<a href="@Url.Action("UserList", "Account")" class="btn btn-secondary">Cancel</a>
		</div>
	</form>
</div>
