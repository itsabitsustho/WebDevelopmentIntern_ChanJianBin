@model UserListVM

@{
    ViewData["Title"] = "Edit User";
}

@{
    ViewBag.links = "User";
}


<div class="admin-content">
    <h2>Edit User</h2>

    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
        </div>
        <div class="form-group">
            <label for="ResidencePlateNumber">Residence Plate Number</label>
            <input type="text" class="form-control" id="ResidencePlateNumber" name="ResidencePlateNumber" value="@Model.ResidencePlateNumber" required />
        </div>
        <div class="form-group">
            @* <label for="Discriminator">Discriminator</label> *@
            @* <select name="Discriminator" id="Discriminator" required> *@
            @*     <option value="Admin" selected="@(Model.Discriminator == "Admin" ? true : false)">Admin</option> *@
            @*     <option value="Resident" selected="@(Model.Discriminator == "Resident" ? true : false)">Resident</option> *@
            @*     <option value="Maintenance" selected="@(Model.Discriminator == "Maintenance" ? true : false)">Maintenance</option> *@
            @* </select> *@
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="@Url.Action("UserList", "Admin")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

